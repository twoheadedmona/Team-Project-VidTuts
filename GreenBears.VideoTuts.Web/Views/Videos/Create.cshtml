

@using (Html.BeginForm("Create","Videos",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("Title", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("title")
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("description")
                </div>
            </div>

        <div class="form-group">
            @Html.Label("Url", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.Editor("url")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tags", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("tags")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4 addButton">
                <input type="submit" value="Add New" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}